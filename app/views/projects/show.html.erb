<div class="page-header">
  <h1>
    <%= @project.title %>
    <small>
      <%= link_to 'edit', edit_project_path(@project) %>
    </small>
  </h1>
</div>

<% if notice %>
<div class="alert">
  <a class="close" data-dismiss="alert">Ã—</a>
  <p id="notice"><%= notice %></p>
</div>
<% end %>

<dl>
  <dt>Description:</dt>
  <dd><%= @project.description %></dd>
</dl>

<% if @project.test_suites.empty? == false %>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
    </tr>
  </thead>
  
  <tbody>
    <% @project.test_suites.each do |test_suite| %>
      <tr>
        <td><%= link_to test_suite.title, test_suite %></td>
        <td><%= link_to raw('<i class="icon-trash"></i>trash'), test_suite, method: :delete, :class => 'btn btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <div class="alert alert-info">
    <p>
    <%= @project.title %> has no test suites.
    <%= link_to 'Create one!', new_project_test_suite_path(@project) %>
    </p>
  </div>
<% end %>
<%= link_to raw('<i class="icon-plus icon-white"></i>&nbsp;Test Suite'), new_project_test_suite_path(@project), :class => 'btn btn-success'%> 

</div>
